<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="teammemes.tritonbudget.HomeScreen">

    <TextView
        android:text="Total Balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="46dp"
        android:id="@+id/home_total_balance"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:layout_marginTop="18dp"
        android:id="@+id/home_balance"
        android:layout_width="200dp"
        android:layout_below="@+id/home_total_balance"
        android:layout_centerHorizontal="true"
        android:layout_height="80dp" />

    <TextView
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="29dp"
        android:id="@+id/home_daily_budget"
        android:layout_width="100dp"
        android:layout_below="@+id/home_balance"
        android:layout_alignLeft="@+id/home_total_balance"
        android:layout_alignStart="@+id/home_total_balance" />

    <TextView
        android:text="Daily Budget Remaining"
        android:id="@+id/home_daily_remaining_text"
        android:layout_alignBaseline="@+id/home_daily_budget"
        android:layout_alignBottom="@+id/home_daily_budget"
        android:layout_toRightOf="@+id/home_total_balance"
        android:layout_toEndOf="@+id/home_total_balance"
        android:layout_height="50dp"
        android:layout_width="120dp"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"
        android:textAllCaps="false" />

    <Button
        android:text="DEDUCT"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/home_daily_budget"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:id="@+id/home_button_deduct" />

    <Button
        android:text="PURCHASE"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:id="@+id/home_button_purchase"
        android:layout_below="@+id/home_button_deduct"
        android:layout_alignLeft="@+id/home_button_deduct"
        android:layout_alignStart="@+id/home_button_deduct" />
</RelativeLayout>
