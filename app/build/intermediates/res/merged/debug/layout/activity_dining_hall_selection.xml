                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/DH_LLV_ClubMedDescriptionContainer">

                    <TextView
                        android:text="Club Med"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/DH_TextView_ClubMed" />

                    <TextView
                        android:text="School of Medicine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/DH_TextView_SchoolMed" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/DH_LLHClickable_FlavorFT"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/DH_IMG_FlavorFT" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/DH_LLV_FlavorFTDescriptionContainer">

                    <TextView
                        android:text="Flavors of the World"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/DH_TextView_FlavorFT" />

                    <TextView
                        android:text="Varies"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/DH_TextView_VariesFlavorFT" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/DH_LLHClickable_Goodys"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/DH_IMG_Goodys" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/DH_LLV_GoodysDescriptionContainer">

                    <TextView
                        android:text="Goody's"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/DH_TextView_Goodys" />

                    <TextView
                        android:text="Masrhall Activity Center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/DH_TextView_MarshallActivityCenter" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/DH_LLHClickable_GoodysFT"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/DH_IMG_GoodysFT" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/DH_LLV_GoodysFTDescriptionContainer">

                    <TextView
                        android:text="Goody's To-go Truck"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/DH_TextView_GoodysFT" />

                    <TextView
                        android:text="Varies"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/DH_TextView_VariesGoodysFT" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/DH_LLHClickable_Roots"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/DH_IMG_Roots"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/DH_LLV_RootsDescriptionContainer">

                    <TextView
                        android:text="Roots"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/DH_TextView_Roots" />

                    <TextView
                        android:text="Muir College"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/DH_TextView_MuirCollege" />
