            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:text="Dining Halls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="140dp"
                android:layout_marginTop="29dp"
                android:id="@+id/DH_TextView_DiningHall" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/DH_LLHClickable_64"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/DH_IMG_64" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/DH_LLV_64DescriptionContainer">

                    <TextView
                        android:text="64 Degrees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/DH_TextView_64"
                        android:layout_weight="1" />

                    <TextView
                        android:text="Revelle College"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/DH_TextView_RevelleCollege"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/DH_LLHClickable_CafeV"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/DH_IMG_CafeV" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:id="@+id/DH_LLV_CafeVDescriptionContainer"
                    android:weightSum="1">

                    <TextView
                        android:text="Cafe Ventanas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/DH_Textview_CafeV" />

                    <TextView
                        android:text="Eleanor Roosevelt College"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/DH_TextView_ERC" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/DH_LLHClickable_CanyonV"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/DH_IMG_CanyonV" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/DH_LLV_CanyonVDescriptionContainer">

                    <TextView
                        android:text="Canyon Vista"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/DH_TextView_CanyonV" />

                    <TextView
                        android:text="Warren College"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/DH_TextView_Warren" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/DH_LLHClickable_Foodworx"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/DH_IMG_Foodworx" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/DH_LLV_FoodworxDescriptionContainer">

                    <TextView
                        android:text="Foodworx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/DH_TextView_Foodworx" />

                    <TextView
                        android:text="Sixth College"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/DH_TextView_Sixth" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/DH_LLHClickable_OVT"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/DH_IMG_OVT" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/DH_LLV_OVTDescriptionContainer">

                    <TextView
                        android:text="Ocean View"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/DH_TextView_OVT" />

                    <TextView
                        android:text="Marshall College"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/DH_LLHClickable_Pines"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/DH_IMG_Pines" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/DH_LLV_PinesDescriptionContainer">

                    <TextView
                        android:text="Pines"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
